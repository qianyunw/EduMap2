<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/sift_type"
			android:layout_width="68dp"
			android:layout_height="40dp"
			android:textColor="@color/white"
			android:text="类型"
			android:textSize="15dp"
			android:layout_gravity="center"
			android:background="@color/accent"
			/>


		<LinearLayout
			android:visibility="gone"
			android:id="@+id/sift_type_more"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			>

			<CheckBox
				android:checked="true"
				android:id="@+id/sift_type1"
				android:layout_width="68dp"
				android:layout_height="40dp"
				android:textColor="@color/white"
				android:background="@color/primary"
				android:textSize="15dp"
				android:text="小学" />
			<CheckBox
				android:checked="true"
				android:id="@+id/sift_type2"
				android:layout_width="68dp"
				android:layout_height="40dp"
				android:textColor="@color/white"
				android:background="@color/primary"
				android:textSize="15dp"
				android:text="初中" />
			<CheckBox
				android:checked="true"
				android:id="@+id/sift_type3"
				android:layout_width="68dp"
				android:layout_height="40dp"
				android:textColor="@color/white"
				android:background="@color/primary"
				android:textSize="15dp"
				android:text="高中" />

		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/sift_score"
			android:layout_width="68dp"
			android:layout_height="40dp"
			android:textColor="@color/white"
			android:text="评分"
			android:textSize="15dp"
			android:layout_gravity="center"
			android:background="@color/accent"
			/>

		<LinearLayout
			android:visibility="gone"
			android:id="@+id/sift_score_more"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			>

			<CheckBox
				android:checked="true"
				android:id="@+id/sift_score1"
				android:layout_width="68dp"
				android:layout_height="40dp"
				android:textColor="@color/white"
				android:background="@color/primary"
				android:textSize="15dp"
				android:text="1-4" />
			<CheckBox
				android:checked="true"
				android:id="@+id/sift_score2"
				android:layout_width="68dp"
				android:layout_height="40dp"
				android:textColor="@color/white"
				android:background="@color/primary"
				android:textSize="15dp"
				android:text="4-7" />
			<CheckBox
				android:checked="true"
				android:id="@+id/sift_score3"
				android:layout_width="68dp"
				android:layout_height="40dp"
				android:textColor="@color/white"
				android:background="@color/primary"
				android:textSize="15dp"
				android:text="7-10" />

		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/sift_distance"
			android:layout_width="68dp"
			android:layout_height="40dp"
			android:textColor="@color/white"
			android:text="距离"
			android:textSize="15dp"
			android:layout_gravity="center"
			android:background="@color/accent"
			/>


		<LinearLayout
			android:visibility="gone"
			android:id="@+id/sift_distance_more"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			>

			<CheckBox
				android:checked="true"
				android:id="@+id/sift_distance1"
				android:layout_width="wrap_content"
				android:layout_height="40dp"
				android:textColor="@color/white"
				android:background="@color/primary"
				android:textSize="15dp"/>
			<CheckBox
				android:checked="true"
				android:id="@+id/sift_distance2"
				android:layout_width="wrap_content"
				android:layout_height="40dp"
				android:textColor="@color/white"
				android:background="@color/primary"
				android:textSize="15dp"/>
			<CheckBox
				android:checked="true"
				android:id="@+id/sift_distance3"
				android:layout_width="wrap_content"
				android:layout_height="40dp"
				android:textColor="@color/white"
				android:background="@color/primary"
				android:textSize="15dp"/>

		</LinearLayout>
	</LinearLayout>
</LinearLayout>